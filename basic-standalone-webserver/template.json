{
	"AWSTemplateFormatVersion" : "2010-09-09",
	"Description" : "A basic standalone EC2 webserver instance",
    "Parameters" : {
        "tagName" : {
            "Description" : "The EC2 instance tag name",
            "Type" : "String"
        },
        "subnetBlock" : {
            "Description" : "The private CIDR subnet block to create and place the EC2 instance into",
            "Type" : "String",
            "Default" : "10.0.1.0/24"
        },
        "amiId" : {
            "Description" : "The EC2 AMI ID to use for the instance",
            "Type" : "String"
        },
        "instanceType" : {
            "Description" : "The EC2 Instance type to use",
            "Type" : "String",
            "Default" : "t2.micro"
        },
        "keyName" : {
            "Description" : "The EC2 Key Pair to allow SSH access to the instance",
            "Type" : "AWS::EC2::KeyPair::KeyName"
        }
    },
    "Resources" : {
		"Ec2Instance" : {
			"Type" : "AWS::EC2::Instance",
			"Properties" : {
				"ImageId" : {"Ref" : "amiId"},
				"InstanceType": {"Ref" : "instanceType"},
				"KeyName" : {"Ref" : "keyName"},
				"SecurityGroupIds" : [ {"Fn::GetAtt" : ["InstanceSecurityGroup", "GroupId"]} ],
                "SubnetId" : {"Ref" : "InstanceSubnet"},
				"Tags" : [ {
					 "Key" : "Name",
					 "Value" : {"Ref" : "tagName"}
				 } ]
			}
		},
		"InstanceSecurityGroup" : {
            "Type": "AWS::EC2::SecurityGroup",
            "Properties": {
                "GroupDescription": "Enable public SSH and Web access",
                "SecurityGroupIngress": [
                    {
                        "IpProtocol" : "tcp",
                        "FromPort" : "22",
                        "ToPort" : "22",
                        "CidrIp" : "0.0.0.0/0"
                    },
                    {
                        "IpProtocol" : "tcp",
                        "FromPort" : "80",
                        "ToPort" : "80",
                        "CidrIp" : "0.0.0.0/0"
                    }
                ],
                "VpcId" : {"Ref" : "InstanceVPC"}
            }
        },
        "InstanceVPC" : {
            "Type" : "AWS::EC2::VPC",
            "Properties" : {
                "CidrBlock" : {"Ref" : "subnetBlock"},
                "EnableDnsHostnames" : true,
                "InstanceTenancy" : "default"
            }
        },
        "InstanceSubnet" : {
            "Type" : "AWS::EC2::Subnet",
            "Properties" : {
                "CidrBlock" : {"Ref" : "subnetBlock"},
                "MapPublicIpOnLaunch" : true,
                "VpcId" : {"Ref" : "InstanceVPC"}
            }
        },
        "InstanceGateway" : {
            "Type" : "AWS::EC2::InternetGateway"
        },
        "InstanceGatewayAttachment" : {
            "Type" : "AWS::EC2::VPCGatewayAttachment",
            "Properties" : {
                "InternetGatewayId" : {"Ref" : "InstanceGateway"},
                "VpcId" : {"Ref" : "InstanceVPC"}
            }
        },
        "InstanceRouteTable" : {
            "Type" : "AWS::EC2::RouteTable",
            "Properties" : {
                "VpcId": {"Ref" : "InstanceVPC"}
            }
        },
        "InstanceRoute" : {
            "Type" : "AWS::EC2::Route",
            "Properties" : {
                "DestinationCidrBlock" : "0.0.0.0/0",
                "GatewayId" : {"Ref" : "InstanceGateway"},
                "RouteTableId" : {"Ref" : "InstanceRouteTable"}
            }
        },
        "InstanceSubnetRouteTableAssociation" : {
            "Type" : "AWS::EC2::SubnetRouteTableAssociation",
            "Properties" : {
                "RouteTableId" : {"Ref" : "InstanceRouteTable"},
                "SubnetId" : {"Ref" : "InstanceSubnet"}
            }
        }
    }
}